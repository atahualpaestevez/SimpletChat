<body>
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <h1>SIMPLE CHAT WEB APP</h1>

            </div>
            @if (User.Identity.Name != null)
            {
                <div class="col-md-6">
                    <button class="btn btn-danger" onclick="window.location.href= '/Home/LogOut'" style="margin-top: 6px;">Logout</button>
                </div>
            }

        </div>

        <div class="row">
            <main>
                @RenderBody()
            </main>
        </div>

        <div class="row">
            <footer>
                
            </footer>
        </div>
         
    </div>

</body>
